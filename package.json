{
    "name": "search-on",
    "displayName": "Search On ...",
    "description": "Search On ... is an editor extension that allows developers to easily search selected text across multiple platforms. With this extension, you can quickly access information from websites like Google, GitHub, MDN, and many others.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "search-on.search",
                "title": "Search on ...",
                "when": "false"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "search-on.search",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Search On ...",
            "properties": {
                "searchOn.customPlatforms": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "label": {
                                "type": "string",
                                "description": "Name of the custom platform."
                            },
                            "url": {
                                "type": "string",
                                "description": "URL for the custom platform."
                            }
                        },
                        "required": [
                            "label",
                            "url"
                        ]
                    },
                    "default": [],
                    "description": "Add your own platforms. See the README for further details."
                },
                "searchOn.google": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on Google"
                },
                "searchOn.gitHub": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on GitHub"
                },
                "searchOn.MDN": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on MDN (Mozilla Developer Network)"
                },
                "searchOn.reddit": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on Reddit"
                },
                "searchOn.stackOverflow": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on Stack Overflow"
                },
                "searchOn.wikipedia": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on Wikipedia"
                },
                "searchOn.youTube": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on YouTube"
                },
                "searchOn.NPM": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on NPM (Node Package Manager)"
                },
                "searchOn.cssTricks": {
                    "type": "boolean",
                    "default": true,
                    "description": "Search on CSS-Tricks"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.105.0",
        "@types/mocha": "^10.0.9",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "eslint": "^9.13.0",
        "typescript": "^5.6.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}